block var
	- var title = 'Результаты 1-го этапа секции «Интерфейсы»'
extends ../../layout/default.jade
block header
	include ../../partials/navbar.jade
mixin team(winner, team, scores)
	if winner
		tr
			td.results__winner
			td.results__team= team
			td
			td
			td
			td
			td
			td= scores
	else
		tr.results__loser
			td
			td.results__team= team
			td
			td
			td
			td
			td
			td= scores
block content
	section.case
		.container
			h1.case__heading Результаты 1-го этапа секции «Интерфейсы»
			table.results
				thead
					tr
						td.results__winner.results__winner--none
						td.results__team.results__header Команда
						td Креативность
						td Исполнение
						td Презентация
						td Соответствие ЦА
						td Глубина анализа
						td.results__header Общая оценка
				tbody
					+team(true, '1. GUM', '10')
					+team(true, '2. Гордые и худые', '9,25')
					+team(true, '3. BreadСrumbs', '9')
					+team(true, '4. Арктика', '8,75')
					+team(true, '5. Люди,которые сразу', '8,5')
					+team(true, '6. F13', '8')
					+team(true, '7. 2Д', '7,75')
					+team(true, '8. Портрет художника в юности', '7,75')
					+team(true, '9. Ave UX', '7,75')
					+team(true, '10. Own style', '6,5')
					+team(true, '11. Взрывпакет', '6,25')
					+team(true, '12. Arax', '6')
					+team(true, '13. Media Foxes', '6')
					
					+team(false, '14. Пакет', '4,75')
					+team(false, '15. Ячейка', '4,25')
					+team(false, '16. Case Club VyatSU', '4')
					+team(false, '17. Inventors', '0,5')
					+team(false, '18. DTS+', '0,5')
