						input#contacts__name.contacts__input(name='name' type='text' placeholder='Ваше имя*' required)
						input#contacts__email.contacts__input(name='email' type='email' placeholder='Ваша почта*' required)
						//- input.contacts__input.contacts__input--wrong(type='email' placeholder='Ваш e-mail*')
						//- input.contacts__input.contacts__input--success(type='email' placeholder='Ваш e-mail*')
						textarea#contacts__message.contacts__input(name='message' placeholder='Чем мы можем помочь?*' rows='5' required)
						input.contacts__submit(type="submit" value="Отправить письмо" disabled)
						//- p.contacts__submit-message Спасибо, письмо отправлено.<br>В течение 1-2 дней с вами свяжутся.
